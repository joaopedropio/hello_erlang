{erl_opts, [debug_info]}.
{deps, [{cowboy, "2.4.0"}]}.

{relx, [{release, { hello_erlang, "0.1.0" },
         [hello_erlang,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [
	{prod, [
		{erl_opts, [no_debug_info, warnings_as_errors]},
		{relx, [
			{dev_mode, false},
        	{include_erts, true}
		]}
	]},
    {debug, [
        {deps, [meck]},
        {erl_opts, [debug_info]}
    ]}
]}.
